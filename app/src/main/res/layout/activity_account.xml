<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".NavigationFragment.AccountFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="1dp"
        android:theme="@style/ActionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|clip_vertical"
                android:layout_marginTop="3pt"
                android:gravity="clip_vertical"
                android:text="김주엽"
                android:textColor="#707070"
                android:textSize="8.5pt" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="(juyeop)" />

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="72.5pt"
                android:layout_height="15.5pt"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_profile"
                android:text="프로필 편집"
                android:textColor="#F2B705"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/background_profile_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background_profile_text">
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="계정 정보"
                android:paddingStart="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background_profile_text">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:text="전화번호"
                android:textSize="17dp"
                tools:ignore="RtlCompat"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"/>

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-6392-7114"
                android:textSize="17dp"
                android:paddingEnd="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background_profile_text">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:text="이메일"
                android:textSize="17dp"
                tools:ignore="RtlCompat"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjy031104@gmail.com"
                android:textSize="17dp"
                android:paddingEnd="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background_profile_text">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:text="학교"
                android:textSize="17dp"
                tools:ignore="RtlCompat"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"/>

            <TextView
                android:id="@+id/user_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대구소프트웨어고등학교"
                android:textSize="17dp"
                android:paddingEnd="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background_profile_text">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:text="학반"
                android:textSize="17dp"
                tools:ignore="RtlCompat"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"/>

            <TextView
                android:id="@+id/user_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1학년 3반"
                android:textSize="17dp"
                android:paddingEnd="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/channel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background_profile_text">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:text="가입 채널 확인하기"
                android:textSize="17dp"
                tools:ignore="RtlCompat"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"/>

            <ImageButton
                android:id="@+id/check_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_foreground"
                android:layout_gravity="center"
                android:paddingEnd="20dp"
                android:textSize="20dp"
                tools:ignore="RtlCompat,VectorDrawableCompat"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>